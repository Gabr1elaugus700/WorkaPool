generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @default("")
  user      String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  codRep    Int      @default(0)
}

enum Role {
  ADMIN
  USER
  VENDEDOR
  LOGISTICA
}

// Caminhões Disponíveis
model Trucks {
  id        String   @id @default(uuid())
  name      String
  capacity  Int
  createdAt DateTime @default(now())
  codRep    Int      @default(0)
}

enum CargaSituacao {
  ABERTA
  SOLICITADA
  FECHADA
  CANCELADA
  ENTREGUE
}

model Cargas {
  id        String   @id @default(uuid())
  codCar    Int      @unique
  name      String
  destino   String
  pesoMax   Int
  custoMin  Int
  situacao  CargaSituacao @default(ABERTA)
  createdAt DateTime @default(now())
}
